<% content_for :title, "Editing Post" %>

<div class="container mt-4">
  <div class="card shadow-lg border-0 rounded-4">
    <!-- Card Header with Icon -->
    <div class="card-header bg-primary text-white d-flex align-items-center">
      <i class="bi bi-pencil-square me-2"></i> <!-- Edit Icon -->
      <h4 class="mb-0">Edit Post</h4>
    </div>

    <!-- Card Body (Form) -->
    <div class="card-body">
      <%= render "form", post: @post %>
    </div>
  </div>

  <!-- Navigation Links with Icons -->
  <div class="mt-3 d-flex justify-content-between">
    <%= link_to @post, class: "btn btn-outline-info btn-sm rounded-pill px-3" do %>
      <i class="bi bi-eye"></i> Show this post
    <% end %>

    <%= link_to posts_path, class: "btn btn-outline-secondary btn-sm rounded-pill px-3" do %>
      <i class="bi bi-arrow-left"></i> Back to Posts
    <% end %>
  </div>
</div>
