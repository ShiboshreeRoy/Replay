<div class="container">
<div class="row justify-content-center">
   <div class="col-md-6 col-lg-4">
      <div class="card shadow-lg border-0 mt-4 mb-2">
         <div class="card-body p-4">
            <h2 class="text-center mb-4  lily-script text-primary">Sign In</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
               <%= f.label :email, class: "form-label" %>
               <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
               </div>
            </div>
            <div class="mb-3">
               <%= f.label :password, class: "form-label" %>
               <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-lock"></i></span>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
               </div>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
               <%= f.check_box :remember_me, class: "form-check-input" %>
               <%= f.label :remember_me, class: "form-check-label" %> Remember me
            </div>
            <% end %>
            <div class="text-center">
               <%= f.submit "Log In", class: "btn btn-primary w-100" %>
            </div>
            <div class="text-center mt-3">
               <%= link_to "Forgot Password?", new_user_password_path, class: "text-muted" %>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
         </div>
      </div>
   </div>
</div>